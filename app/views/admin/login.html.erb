<div class="application-form">
  <% form_tag do %>
    <fieldset>
      <legend>请登录系统：</legend>

      <div>
        <label for="name">登录名:</label>
        <%= text_field_tag :userid, params[:userid] %>
      </div>

      <div>
        <label for="password">密码:</label>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div>
        <%= submit_tag "登录" %>
      </div>
    </fieldset>
  <% end %>
</div>

