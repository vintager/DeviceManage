<div class = "tabel-list">
  <table>
    <tr>
      <th>部门</th>
      <% for t in device_types %>
        <th><%=h t.name %></th>
      <% end %>
      <th>合计</th>
    </tr>
    <% for department in @department %>
      <tr>
        <td style="text-align: left"><%=h department[0].name %></td>
        <% for count in department[1] %>
          <td><%=h count %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
