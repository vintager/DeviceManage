<h1>修改部门信息</h1>

<% form_for(@department) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label "单位名称" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "上级单位" %><br />
    <%= f.select :parent,parent_and_departments.names ,{:selected =>@department.parent.name}%>
  </p>
   <p>
    <%= f.label :contact,"联系人" %><br />
    <%= f.text_field :contact %>
  </p>
  <p>
    <%= f.label :phone ,"联系电话"%><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label "地址" %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.submit "修改" %>
  </p>
<% end %>

<%= link_to '显示', @department %> |
<%= link_to '返回', departments_path %>
