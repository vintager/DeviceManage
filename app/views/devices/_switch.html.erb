<% fields_for(@device_detail) do |f| %>
  <fieldset>
    <legend>详细信息：</legend>
    <table>
      <tr>
        <td>
          <%= f.label :port,"端口数量" %><br />
          <%= f.text_field :port %>
        </td>
        <td>
          <%= f.label :layer,'二层/三层' %><br />
          <%= f.select :layer,["二层","三层"] %>
        </td>
      </tr>
      <tr>


        <td>
          <%= f.label :speed ,"端口速率"%><br />
          <%= f.text_field :speed %>
        </td>
        <td>
          <%= f.label :back_speed, "背板速率"%><br />
          <%= f.text_field :back_speed %>
        </td>
      </tr>
      <tr>
        <td  colspan="2">
          <%= f.label :memo,"备注" %> <br />
          <%= f.text_area :memo,:rows=>"10",:cols=>"80" %>
        </td>
      </tr>
    </table>
  </fieldset>
<% end %>
