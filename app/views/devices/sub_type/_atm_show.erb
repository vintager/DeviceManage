<% fields_for(@device_detail) do |f| %>
  <fieldset>
    <legend>详细信息：</legend>
    <table>
      <tr>
        <td>
          <%= f.label :through_the_wall,"大堂/穿墙" %><br />
          <%= f.select :through_the_wall,["大堂","穿墙"],:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :system,"操作系统类型" %><br />
          <%= f.text_field :system,:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :cash_box_qty,"钞箱数量(个)" %><br />
           <%= f.text_field :cash_box_qty,:size=>"25", :readonly => "true" %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :deposit_module,"是否带存款模块" %><br />
         <%= f.select :deposit_module,["是","否"],:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :touch_screen,"是否为触摸屏" %><br />
          <%= f.select :touch_screen,["是","否"],:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :monitor,"是否有监控" %><br />
           <%= f.select :monitor,["是","否"],:size=>"25", :readonly => "true" %>
        </td>
      </tr>
      <tr>
        <td  colspan="3">
          <%= f.label :memo,"备注" %> <br />
          <%= f.text_area :memo,:rows=>"10",:cols=>"70" %>
        </td>
      </tr>
    </table>
  </fieldset>
<% end %>
