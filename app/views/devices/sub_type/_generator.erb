<% fields_for(@device_detail) do |f| %>
  <fieldset>
    <legend>详细信息：</legend>
    <table>
      <tr>
        <td>
          <%= f.label :voltage,"输出电压(伏)" %><br />
          <%= f.text_field :voltage, :size=>"25" %>
        </td>
        <td>
          <%= f.label :power,'输出功率(千瓦)' %><br />
          <%= f.text_field :power, :size=>"25"%>
        </td>
        <td>
          <%= f.label :fuel_type,'燃油种类' %><br />
          <%= f.select :fuel_type, ["汽油","柴油"],:size=>"25"%>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :starting_method,"启动方式" %><br />
          <%= f.select :starting_method, ["手动","自动"],:size=>"25"%>
        </td>
        <td>
          <%= f.label :discharge_time,"连续工作时间(小时)" %><br />
          <%= f.text_field :discharge_time,:size=>"25" %>
        </td>
        <td>
          <%= f.label :oil_capacity,'邮箱容积(升)' %><br />
           <%= f.text_field :oil_capacity,:size=>"25" %>
        </td>
      </tr>
      <tr>
        <td  colspan="3">
          <%= f.label :memo,"备注" %> <br />
          <%= f.text_area :memo,:rows=>"10",:cols=>"70" %>
        </td>
      </tr>
    </table>
  </fieldset>
<% end %>
