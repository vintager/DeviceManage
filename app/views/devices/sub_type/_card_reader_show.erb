<% fields_for(@device_detail) do |f| %>
  <fieldset>
    <legend>详细信息：</legend>
    <table>
      <tr>
        <td>
          <%= f.label :interface,"接口" %><br />
          <%= f.select :interface,["RS-232","USB"],:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :read_write,"是否可写" %><br />
          <%= f.select :read_write,["是","否"],:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :card_type,"卡类型" %><br />
           <%= f.select :card_type,["IC卡","磁卡"],:size=>"25", :readonly => "true" %>
        </td>
      </tr>
      <tr>
        <td  colspan="3">
          <%= f.label :memo,"备注" %> <br />
          <%= f.text_area :memo,:rows=>"10",:cols=>"70" %>
        </td>
      </tr>
    </table>
  </fieldset>
<% end %>
