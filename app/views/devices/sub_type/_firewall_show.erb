<% fields_for(@device_detail) do |f| %>
  <fieldset>
    <legend>详细信息：</legend>
    <table>
      <tr>
        <td>
          <%= f.label :port_qty,"端口数量" %><br />
          <%= f.text_field :port_qty,:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :user_qty,"用户数" %><br />
          <%= f.text_field :user_qty,:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :vpn,'是否支持VPN' %><br />
          <%= f.select :vpn, ["是","否"],:size=>"25", :readonly => "true"%>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.label :security_filtering,"安全过滤" %><br />
          <%= f.text_field :security_filtering,:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :throughput,"吞吐量" %><br />
          <%= f.text_field :throughput,:size=>"25", :readonly => "true" %>
        </td>
        <td>
          <%= f.label :max_client, "并发连接数"%><br />
          <%= f.text_field :max_client,:size=>"25", :readonly => "true" %>
        </td>
      </tr>

      <tr>
        <td  colspan="3">
          <%= f.label :memo,"备注" %> <br />
          <%= f.text_area :memo,:rows=>"10",:cols=>"70" %>
        </td>
      </tr>
    </table>
  </fieldset>
<% end %>
